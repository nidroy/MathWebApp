@{
    ViewData["Title"] = "Document Headers Page";
}

@model IEnumerable<document_header>

<h2 style="margin-bottom: 15px;">Шапки документов</h2>

<table border="1">
    <tr>
        <th>Номер документа</th>
        <th>Ссылка на справочник контрагента</th>
        <th>Дата документа</th>
        <th>Сумма документа</th>
        <th>Тип документа</th>
        <th>Состояние документа</th>
        <th>Операции</th>
    </tr>
    @foreach (var document_header in Model)
    {
        <tr>
            <td>@document_header.document_number</td>
            <td>
                @Html.ActionLink(
                         linkText: String.Format("{0} {1}", document_header.counterparty.last_name, document_header.counterparty.first_name),
                         actionName: "Read",
                         controllerName: "Counterparties",
                         routeValues: new { id = document_header.counterparty_id },
                         htmlAttributes: new { @class = "btn btn-link" }
                         )
            </td>
            <td>@document_header.document_date.ToString("dd.MM.yyyy")</td>
            <td>@document_header.document_amount</td>
            <td>@document_header.document_type</td>
            <td>@document_header.document_status</td>
            <td style="text-align: center;">
                <div style="display: flex; gap: 15px;">
                    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Read", "DocumentHeaders", new { id = document_header.id })'">Открыть</button>
                    <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("Update", "DocumentHeaders", new { id = document_header.id })'">Изменить</button>
                    <form asp-controller="DocumentHeaders" asp-action="Delete" asp-route-id="@document_header.id" method="post" onsubmit="return confirm('Вы уверены, что хотите удалить эту шапку документа?');">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </td>
        </tr>
    }
</table>

<p style="margin-top: 15px;">
    <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create", "DocumentHeaders")'">Добавить</button>
</p>
